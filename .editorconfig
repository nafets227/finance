# EditorConfig is awesome: http://EditorConfig.org
# child EditorConfig file of SuperLint default
root = false

# Unix-style newlines at the bottom of every file
[*]
end_of_line = lf
charset = utf-8

# Tab indentation
indent_style = tab
indent_size = 4

# Make sure every file has a blank line at the end
insert_final_newline = true

# Remove any whitespace characters preceding newline characters
trim_trailing_whitespace = true

# Give operators breathing room, but not brackets
spaces_around_operators = true
spaces_around_brackets = false

# Max line length (not supported by all editors)
max_line_length = 80

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[{LICENSE,*.md}]
indent_style = space
indent_size = unset
